<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#fff"
            android:id="@+id/iv_home_grid4_img"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_home_grid4_img"
            android:text="123456789"
            android:id="@+id/tv_home_gird4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/tv_home_grid4_text"
            android:text="1234567890"
            android:layout_toRightOf="@+id/iv_home_grid4_img"
            android:layout_below="@+id/tv_home_gird4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/tv_home_grid4_sprice"
            android:text="1234567890"
            android:textColor="#CA1F1F"
            android:layout_toRightOf="@+id/iv_home_grid4_img"
            android:layout_below="@+id/tv_home_grid4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>